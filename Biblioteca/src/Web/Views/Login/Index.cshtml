
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model Usuario.Application.ViewModel.Usuario

<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Acesso ao Portal Biblioteca Universal</div>
        <div class="card-body">
          @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "FormLogin", ng_controller = "" }))
          {
            @Html.AntiForgeryToken()
              if (TempData["msgSucesso"] != null){  <span style="text-align: center" class="text-danger">@TempData["msgSucesso"]</span>}
                <div class="form-group">
                    @Html.Label("Login")
                    @Html.TextBoxFor(c => c.Login, new { @type = "text", @class = "form-control", @placeholder = "Seu Email" })
                </div>
                <div class="form-group">
                    @Html.Label("Senha")
                    @Html.TextBoxFor(c => c.Senha, new { @type = "password", @class = "form-control", @placeholder = "Sua senha" })
                </div>
                }
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Login/Cadastro">Criar sua Conta</a>
                    <a class="d-block small" href="/Login/RecuperarSenha">Esqueçeu sua senha?</a>
                </div>
</div>
    </div>
</div>

