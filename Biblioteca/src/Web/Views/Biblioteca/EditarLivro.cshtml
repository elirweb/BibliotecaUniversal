
@model UsuarioBiblioteca.Application.ViewModel.Livro

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery/jquery-mask.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div class="container text-center">

    @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "FormCadastro", @class = "form-login", @novalidate = "novalidate" }))
    {
        if (ViewBag.Msg != null)
        {
            foreach (var erro in ViewBag.Msg)
            {
                <span style="text-align: center" class="text-danger">@erro</span>

            }
        }
        <span style="text-align: center">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
        @Html.AntiForgeryToken()
        <div class="">
            <input type="hidden" name="tokenlivro" ng-value="tokenlv"  />
        </div>
        <div class="form-group">
            @Html.TextBoxFor(c => c.Titulo, new { @type = "text", @class = "form-control", @name="Titulo" ,@ng_model = "Titulo", @placeholder = "Titulo do Livro" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(c => c.Descricao, new { @type = "text", @class = "form-control", @name= "Descricao", @ng_model= "Descricao", @placeholder = "Descrição" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(c => c.Editora, new { @type = "text", @class = "form-control", @name= "Editora",@ng_model= "Editora", @placeholder = "Editora" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(c => c.QtdPg, new { @type = "text", @class = "form-control", @name= "QtdPg",@ng_model= "QtdPg", @placeholder = "QtdPg" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(model => model.DescCategoria, new SelectList(Model._listlv, "Value", "Text"), "Selecione...", new { @class = "form-control ",@name= "DescCategoria",@ng_model= "DescCategoria" })
        </div>
        <div class="form-group">
            <input type="submit" value="Atualizar" class="btn btn-xg btn_verde" ng-click="AtualizarLivro()" />
        </div>
    }
</div>
